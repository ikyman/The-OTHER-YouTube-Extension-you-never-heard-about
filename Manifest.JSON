{
	"name": "Youtube Algorithm filtering.",
	"manifest_version": 3,
	"version": "0.2",
	"description": "Fiddling with autoplay was too hard. Instead, I'll nix any 'x in y minutes or less'",
	"permissions":[
		"activeTab","webNavigation","tabs","storage"
	],

	"content_scripts":[{
		"matches":["*://*.youtube.com/*"],
		"js":["titlePattern.js","recommendedVideo.js","youtube_anti_clickbait.js"],
		"run_at": "document_idle"
	}],

	"host_permissions": [
    	"*://www.youtube.com/*"
	],

	"background":{
		"service_worker": "count_time_saved.js"
	}
}
